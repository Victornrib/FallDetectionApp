<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StandardButton">
        <item name="android:layout_width"> 200dp </item>
        <item name="android:layout_height"> 17dp </item>
        <item name="android:layout_weight"> 0.05 </item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:layout_gravity"> center_horizontal </item>
        <item name="android:insetTop"> 0dp </item>
        <item name="android:insetBottom"> 0dp </item>
    </style>

    <style name="StandardButton.InitialActivity">
        <item name="android:background">@drawable/button_initial_activity</item>
        <item name="android:textColor"> #1C6AE6 </item>
    </style>

    <style name="StandardButton.Orange">
        <item name="android:background">@drawable/button_standard_orange</item>
        <item name="android:textColor"> @color/white </item>
    </style>

</resources>