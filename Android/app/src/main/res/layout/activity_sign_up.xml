<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpActivity">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/StandardLayout">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/josefin_sans_semibold_italic"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textColor="@color/standard_blue"
            android:textSize="35sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <LinearLayout
            style="@style/StandardInputLayout">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRegisterUserName"
                android:text="Name:"
                style="@style/StandardTextView" />

            <EditText
                android:id="@+id/editTextRegisterUserName"
                android:inputType="textPersonName"
                android:hint="Enter your name"
                style="@style/StandardEditText" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <LinearLayout
            style="@style/StandardInputLayout">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRegisterUserTelephone"
                android:text="Telephone:"
                style="@style/StandardTextView" />

            <EditText
                android:id="@+id/editTextRegisterUserTelephone"
                android:inputType="phone"
                android:hint="Enter your phone number"
                style="@style/StandardEditText" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <LinearLayout
            style="@style/StandardInputLayout">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRegisterUserEmail"
                android:text="Email:"
                style="@style/StandardTextView" />

            <EditText
                android:id="@+id/editTextRegisterUserEmail"
                android:inputType="textEmailAddress"
                android:hint="Enter your email address"
                style="@style/StandardEditText" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <LinearLayout
            style="@style/StandardInputLayout">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRegisterUserPassword"
                android:text="Password:"
                style="@style/StandardTextView" />

            <EditText
                android:id="@+id/editTextRegisterUserPassword"
                android:inputType="textPassword"
                android:hint="Enter your password"
                style="@style/StandardEditText" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <LinearLayout
            style="@style/StandardInputLayout">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRegisterUserRepeatedPassword"
                android:text="Repeat\nPassword:"
                style="@style/StandardTextView" />

            <EditText
                android:id="@+id/editTextRegisterUserRepeatedPassword"
                android:inputType="textPassword"
                android:hint="Repeat your password"
                style="@style/StandardEditText" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <Button
            android:id="@+id/buttonRegisterUser"
            android:text="Register"
            style="@style/StandardButton.Orange" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>