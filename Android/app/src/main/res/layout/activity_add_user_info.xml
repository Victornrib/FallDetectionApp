<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddUserInfoActivity">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/standard_background"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05" />

    <TextView
        android:id="@+id/textViewAddInfo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:fontFamily="@font/josefin_sans_semibold_italic"
        android:text="Tell me more\nabout you"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/standard_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp">

      <View
          android:layout_width="0dp"
          android:layout_weight="7"
          android:layout_height="match_parent"
          android:layout_marginTop="6dp"
          android:background="@color/standard_orange"/>

      <Space
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03" />

    <LinearLayout
        style="@style/StandardInputLayout">

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

      <TextView
          android:id="@+id/textViewBirthDate"
          android:text="Birth date:"
          style="@style/StandardTextView" />

      <Space
          android:layout_width="20dp"
          android:layout_height="wrap_content" />

      <Button
          android:id="@+id/buttonDateOfBirth"
          android:onClick="openDatePicker"
          android:text="26 November, 1973"
          style="@style/StandardSelectPicker.Button" />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03" />

    <LinearLayout
        style="@style/StandardInputLayout">

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

      <TextView
          android:id="@+id/textViewSex"
          android:text="Sex:"
          style="@style/StandardTextView" />

      <Space
          android:layout_width="20dp"
          android:layout_height="wrap_content" />

      <Spinner
          android:id="@+id/spinnerSex"
          style="@style/StandardSelectPicker" />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03" />

    <LinearLayout
        style="@style/StandardInputLayout">

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

      <TextView
          android:id="@+id/textViewMovementDisorders"
          android:text="Movement disorders?"
          style="@style/StandardTextView" />

      <Space
          android:layout_width="20dp"
          android:layout_height="wrap_content" />

      <ListView
          android:id="@+id/listViewMovementDisorders"
          android:choiceMode="multipleChoice"
          style="@style/StandardSelectPicker"/>

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03" />

    <Button
        android:id="@+id/buttonConfirm"
        android:text="Confirm"
        style="@style/StandardButton.Orange"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>