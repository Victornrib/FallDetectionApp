<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CheckEmergencyContactActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#93D0EC"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonBackToSettings"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Back"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/textViewCheckContactInformation"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="0.25"
            android:text="Check Contact Information"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCheckEmergencyContactName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:text="Name:"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmergencyContactName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XXXXX"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCheckrEmergencyContactTelephone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Telephone:"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmergencyContactTelephone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="XXXXXXXX"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCheckEmergencyContactName8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Email:"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmergencyContactEmail"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="XXXXX@XX.XX"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="-20dp"
                tools:layout_editor_absoluteY="542dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/buttonDeleteEmergencyContact"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Delete Contact"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>